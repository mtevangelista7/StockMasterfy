@page "/produtos"
@inherits ProdutosBase

<PageTitle>Produtos</PageTitle>

<MudAppBar Color="Color.Primary" Fixed="false" Dense="true">
    <MudText>Stockmasterfy.io</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" />
</MudAppBar>


<MudGrid Spacing="0">
    <MudItem xs="12" sm="12" md="12">
        <MudPaper Class="pa-4" Elevation="0">
            <MudGrid Justify="Justify.Center" Spacing="3">

                <MudItem xs="6" sm="4" md="3">
                    <button>
                        <MudPaper Elevation="6" Class="rounded-lg indigo lighten-5 pa-2 hover-effect">
                            <MudStack Row="false">
                                <MudImage Fluid="true" ObjectFit="ObjectFit.Cover" ObjectPosition="ObjectPosition.Center" Src="img/vecteezy_open-cardboard-boxes-3d-illustration-delivery-packing-and_9973897.png"></MudImage>
                                <MudText Typo="Typo.h5" Class="text-home-options" Align="Align.Center">Novo produto</MudText>
                            </MudStack>
                        </MudPaper>
                    </button>
                </MudItem>

                <MudItem xs="6" sm="4" md="3">
                    <button>
                        <MudPaper Elevation="6" Class="rounded-lg indigo lighten-5 pa-2 hover-effect">
                            <MudStack Row="false">
                                <MudImage Fluid="true" ObjectFit="ObjectFit.Cover" ObjectPosition="ObjectPosition.Center" Src="img/vecteezy_open-cardboard-boxes-3d-illustration-delivery-packing-and_9973897.png"></MudImage>
                                <MudText Typo="Typo.h5" Class="text-home-options" Align="Align.Center">Listar produtos</MudText>
                            </MudStack>
                        </MudPaper>
                    </button>
                </MudItem>

            </MudGrid>
        </MudPaper>
    </MudItem>
</MudGrid>