@page "/"

@inherits LoginBase

<PageTitle>Login</PageTitle>

<MudGrid Spacing="0">
    <MudItem xs="12" sm="12" md="12">
        <MudPaper Elevation="0" Height="100dvh" Width="100%">
            <MudGrid Spacing="0">
                <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                    <MudItem xs="7" sm="7" md="7">
                        <MudPaper Class="d-flex align-center justify-center pa-6" Height="100dvh">
                            <MudImage Fluid="true" ObjectFit="ObjectFit.Cover" ObjectPosition="ObjectPosition.Center" Src="img/vecteezy_online-education-concept-illustration-digital-classroom_10869731.png"></MudImage>
                        </MudPaper>
                    </MudItem>
                    <MudItem xs="5" sm="5" md="5">
                        <MudPaper Class="d-flex align-center justify-center" Height="100dvh">
                            <MudStack Spacing="4" Justify="Justify.Center" AlignItems="AlignItems.Center" Row="false">
                                <MudText Align="Align.Center">Faça seu login :)</MudText>
                                <MudTextField T="string" Placeholder="Login" Margin="Margin.Dense" Variant="Variant.Outlined"></MudTextField>
                                <MudTextField T="string" Placeholder="Senha" Margin="Margin.Dense" Variant="Variant.Outlined"></MudTextField>
                                <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Save" Color="Color.Primary" Size="Size.Large">LOGIN</MudButton>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                </MudHidden>
                <MudHidden Breakpoint="Breakpoint.MdAndDown" Invert="true">
                    <MudItem xs="12" sm="12" md="12">
                        <MudPaper Class="d-flex align-center justify-center" Height="100dvh">
                            <MudStack Spacing="4" Justify="Justify.Center" AlignItems="AlignItems.Center" Row="false">
                                <MudText Align="Align.Center">Faça seu login :)</MudText>
                                <MudTextField T="string" Placeholder="Login" Margin="Margin.Dense" Variant="Variant.Outlined"></MudTextField>
                                <MudTextField T="string" Placeholder="Senha" Margin="Margin.Dense" Variant="Variant.Outlined"></MudTextField>
                                <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Save" Color="Color.Primary" Size="Size.Large">LOGIN</MudButton>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                </MudHidden>
            </MudGrid>
        </MudPaper>
    </MudItem>
</MudGrid>